<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="using:Avalonia.Controls.Converters"
        xmlns:sys="using:System">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <conv:PlatformKeyGestureConverter x:Key="KeyGestureConverter" />

        <!-- Header menu item transparent color -->
        <SolidColorBrush x:Key="HeaderMenuItemTransparentColor"
                         Color="{DynamicResource SecondaryBackgroundColor}"
                         Opacity="0" />
    </Styles.Resources>

    <!-- Header menu item styles -->
    <Style Selector="MenuItem.headerMenuItem">
        <Setter Property="Background"
                Value="{DynamicResource HeaderMenuItemTransparentColor}" />
        <Setter Property="CornerRadius"
                Value="{DynamicResource DefaultCornerRadius}" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="10" />
        <Setter Property="Margin"
                Value="0, 0, 10, 0" />

        <!-- Remove margin from last child -->
        <Style Selector="^:nth-last-child(1)">
            <Setter Property="Margin"
                    Value="0" />
        </Style>

        <!-- Template -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <!-- Transitions -->
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Duration="00:00:00.3"
                                             Property="Background" />
                        </Transitions>
                    </Border.Transitions>

                    <!-- Content -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="MenuItemIGT" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Toggle icon -->
                        <ContentControl Name="PART_ToggleIconPresenter"
                                        Grid.Column="0"
                                        IsVisible="False"
                                        Margin="0"
                                        Width="16"
                                        Height="16" />

                        <!-- Icon  -->
                        <ContentControl Name="PART_IconPresenter"
                                        Grid.Column="0"
                                        Width="16"
                                        Height="16"
                                        Margin="0"
                                        IsVisible="False"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Icon}" />

                        <!-- Header -->
                        <ContentPresenter Name="PART_HeaderPresenter"
                                          Grid.Column="2"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}">
                            <ContentPresenter.DataTemplates>
                                <DataTemplate DataType="sys:String">
                                    <AccessText Text="{Binding}" />
                                </DataTemplate>
                            </ContentPresenter.DataTemplates>
                        </ContentPresenter>

                        <!-- Input gesture -->
                        <TextBlock Name="PART_InputGestureText"
                                   Grid.Column="3"
                                   VerticalAlignment="Center"
                                   Text="{TemplateBinding InputGesture, Converter={StaticResource KeyGestureConverter}}" />

                        <!-- Right arrow -->
                        <Path Name="rightArrow"
                              Grid.Column="4"
                              Margin="0"
                              VerticalAlignment="Center"
                              Data="M0,0L4,3.5 0,7z"
                              Fill="{DynamicResource ThemeForegroundBrush}"
                              IsVisible="False" />

                        <!-- Popup -->
                        <Popup Name="PART_Popup"
                               Grid.Column="0"
                               IsLightDismissEnabled="False"
                               IsOpen="{TemplateBinding IsSubMenuOpen, Mode=TwoWay}"
                               Placement="BottomEdgeAlignedLeft"
                               VerticalOffset="5">
                            <Border Background="{DynamicResource MenuBackgroundColor}"
                                    BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                                    BorderThickness="0"
                                    CornerRadius="{DynamicResource DefaultCornerRadius}"
                                    ClipToBounds="True">
                                <ScrollViewer Margin="0, 8"
                                              HorizontalScrollBarVisibility="Disabled"
                                              VerticalScrollBarVisibility="Hidden">
                                    <ItemsPresenter Name="PART_ItemsPresenter"
                                                    Margin="0"
                                                    Grid.IsSharedSizeScope="True"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:separator">
            <Setter Property="Template">
                <ControlTemplate>
                    <Separator />
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^:selected /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource TransparentColor}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource ThemeAccentBrush}" />
        </Style>

        <Style Selector="^:empty /template/ Path#rightArrow">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity"
                    Value="{DynamicResource ThemeDisabledOpacity}" />
        </Style>

        <Style Selector="^:toggle /template/ ContentControl#PART_ToggleIconPresenter, ^:radio /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>

        <Style Selector="^:toggle /template/ ContentPresenter#PART_IconPresenter, ^:radio /template/ ContentPresenter#PART_IconPresenter">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:checked:toggle /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="Content">
                <Template>
                    <Path VerticalAlignment="Center"
                          Data="F1M10,1.2L4.7,9.1 4.5,9.1 0,5.2 1.3,3.5 4.3,6.1 8.3,0 10,1.2z"
                          Fill="{Binding $parent[MenuItem].Foreground}" />
                </Template>
            </Setter>
        </Style>

        <Style Selector="^:checked:radio /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="Content">
                <Template>
                    <Ellipse Fill="{Binding $parent[MenuItem].Foreground}"
                             Margin="4"
                             Width="8"
                             Height="8" />
                </Template>
            </Setter>
        </Style>

        <!-- On pointer over root border styles -->
        <Style Selector="^:pointerover /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource SecondaryBackgroundColor}" />
        </Style>

        <!-- On selected root border styles -->
        <Style Selector="^:selected /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource SecondaryBackgroundColor}" />
        </Style>
    </Style>

    <!-- Sub menu item styles -->
    <Style Selector="MenuItem.subMenuItem">
        <Setter Property="Background"
                Value="{DynamicResource MenuBackgroundColor}" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="0, 5" />

        <!-- Template -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <!-- Transitions -->
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Duration="00:00:00.3"
                                             Property="Background" />
                        </Transitions>
                    </Border.Transitions>

                    <!-- Content -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"
                                              SharedSizeGroup="MenuItemIGT" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Toggle icon -->
                        <ContentControl Name="PART_ToggleIconPresenter"
                                        Grid.Column="0"
                                        IsVisible="False"
                                        Margin="5, 0, 0, 0"
                                        Width="16"
                                        Height="16" />

                        <!-- Icon -->
                        <ContentControl Name="PART_IconPresenter"
                                        Grid.Column="0"
                                        Width="16"
                                        Height="16"
                                        Margin="0"
                                        IsVisible="False"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Icon}" />

                        <!-- Header -->
                        <ContentPresenter Name="PART_HeaderPresenter"
                                          Grid.Column="2"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}">
                            <ContentPresenter.DataTemplates>
                                <DataTemplate DataType="sys:String">
                                    <AccessText Text="{Binding}" />
                                </DataTemplate>
                            </ContentPresenter.DataTemplates>
                        </ContentPresenter>

                        <!-- Input gesture -->
                        <TextBlock Name="PART_InputGestureText"
                                   Grid.Column="3"
                                   VerticalAlignment="Center"
                                   Text="{TemplateBinding InputGesture, Converter={StaticResource KeyGestureConverter}}" />

                        <!-- Right arrow -->
                        <Path Name="rightArrow"
                              Grid.Column="4"
                              Margin="10, 0, 15,0"
                              VerticalAlignment="Center"
                              Data="{DynamicResource ChevronDownSvgIcon}"
                              Fill="{DynamicResource ThemeForegroundBrush}"
                              RenderTransform="rotate(-90deg)"
                              Stretch="Uniform"
                              Width="8"
                              Height="8" />

                        <!-- Popup -->
                        <Popup Name="PART_Popup"
                               Grid.Column="0"
                               IsLightDismissEnabled="False"
                               IsOpen="{TemplateBinding IsSubMenuOpen, Mode=TwoWay}"
                               Placement="RightEdgeAlignedTop"
                               HorizontalOffset="5">
                            <Border Background="{DynamicResource MenuBackgroundColor}"
                                    BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                                    BorderThickness="0"
                                    CornerRadius="{DynamicResource DefaultCornerRadius}"
                                    ClipToBounds="True">
                                <ScrollViewer Margin="0, 8"
                                              HorizontalScrollBarVisibility="Disabled"
                                              VerticalScrollBarVisibility="Hidden">
                                    <ItemsPresenter Name="PART_ItemsPresenter"
                                                    Margin="2"
                                                    Grid.IsSharedSizeScope="True"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:separator">
            <Setter Property="Template">
                <ControlTemplate>
                    <Separator />
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^:selected /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource TransparentColor}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource ThemeAccentBrush}" />
        </Style>

        <Style Selector="^:empty /template/ Path#rightArrow">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity"
                    Value="{DynamicResource ThemeDisabledOpacity}" />
        </Style>

        <Style Selector="^:toggle /template/ ContentControl#PART_ToggleIconPresenter, ^:radio /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>

        <Style Selector="^:toggle /template/ ContentPresenter#PART_IconPresenter, ^:radio /template/ ContentPresenter#PART_IconPresenter">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:checked:toggle /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="Content">
                <Template>
                    <Path VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Data="{DynamicResource CheckSvgIcon}"
                          Width="10"
                          Height="10"
                          Stretch="Uniform"
                          Fill="{Binding $parent[MenuItem].Foreground}" />
                </Template>
            </Setter>
        </Style>

        <Style Selector="^:checked:radio /template/ ContentControl#PART_ToggleIconPresenter">
            <Setter Property="Content">
                <Template>
                    <Ellipse Fill="{Binding $parent[MenuItem].Foreground}"
                             Margin="4"
                             Width="8"
                             Height="8" />
                </Template>
            </Setter>
        </Style>

        <!-- On pointer over root border styles -->
        <Style Selector="^:pointerover /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource MenuItemHoverColor}" />
        </Style>

        <!-- On selected root border styles -->
        <Style Selector="^:selected /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource MenuItemHoverColor}" />
        </Style>
    </Style>
</Styles>