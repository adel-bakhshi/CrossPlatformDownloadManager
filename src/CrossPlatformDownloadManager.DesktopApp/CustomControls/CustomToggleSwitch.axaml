<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:CrossPlatformDownloadManager.DesktopApp.CustomControls">
    <Design.PreviewWith>
        <controls:CustomToggleSwitch />
    </Design.PreviewWith>

    <Style Selector="controls|CustomToggleSwitch">
        <Setter Property="Width"
                Value="40" />
        <Setter Property="Height"
                Value="20" />
        <Setter Property="CornerRadius"
                Value="20" />
        <Setter Property="Padding"
                Value="2" />
        <Setter Property="Margin"
                Value="0" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource TransparentColor}" />
        <Setter Property="Background"
                Value="{DynamicResource ToggleColor}" />
        <Setter Property="ToggleCircleSize"
                Value="16" />

        <!-- Transitions -->
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background"
                                 Duration="00:00:00.2" />
            </Transitions>
        </Setter>

        <!-- Template -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <Canvas Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                            <Ellipse x:Name="ToggleCircle"
                                     Width="{TemplateBinding ToggleCircleSize}"
                                     Height="{TemplateBinding ToggleCircleSize}"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Canvas.Left="{TemplateBinding ToggleCircleLeftCanvas}"
                                     Canvas.Top="{TemplateBinding ToggleCircleTopCanvas}"
                                     Fill="{DynamicResource ToggleCircleColor}" />
                        </Canvas>
                    </Border>

                    <Border x:Name="DisabledBorder"
                            Background="{DynamicResource ToggleColor}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Opacity="0.6" />
                </Grid>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ Ellipse#ToggleCircle">
            <!-- Transitions -->
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Easing="CubicEaseOut"
                                      Property="Canvas.Left"
                                      Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="^ /template/ Border#DisabledBorder">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:checked">
            <Setter Property="Background"
                    Value="{DynamicResource ToggleCheckedColor}" />
        </Style>

        <Style Selector="^:disabled /template/ Border#DisabledBorder">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
    </Style>
</Styles>