<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CrossPlatformDownloadManager.DesktopApp.ViewModels"
        xmlns:cc="using:CrossPlatformDownloadManager.DesktopApp.CustomControls"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="CrossPlatformDownloadManager.DesktopApp.Views.CompleteDownloadWindow"
        x:DataType="vm:CompleteDownloadWindowViewModel"
        Title="CDM - Download Completed"
        Width="640"
        Height="320"
        MinWidth="640"
        MinHeight="320"
        MaxWidth="640"
        MaxHeight="320"
        CanResize="False">

    <!-- Main content -->
    <Grid Margin="20"
          RowDefinitions="Auto, *, Auto">
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Download completed"
                   FontWeight="Bold"
                   Foreground="{DynamicResource SuccessColor}"
                   Margin="0, 0, 0, 15" />

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical"
                        Spacing="10">
                <!-- Details -->
                <Border Padding="15"
                        CornerRadius="{DynamicResource DefaultCornerRadius}"
                        Background="{DynamicResource SecondaryBackgroundColor}">
                    <Grid RowDefinitions="Auto, Auto, Auto, Auto"
                          ColumnDefinitions="Auto, *">
                        <!-- File name -->
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="File name:"
                                   Margin="0, 0, 0, 10" />

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding DownloadFile.FileName}"
                                   Margin="15, 0, 0, 10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis" />

                        <!-- File size -->
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="File size:"
                                   Margin="0, 0, 0, 10" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding DownloadFile.SizeAsString}"
                                   Margin="15, 0, 0, 10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis" />

                        <!-- Save location -->
                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Save location:"
                                   Margin="0, 0, 0, 10" />

                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   Text="{Binding DownloadFile.SaveLocation}"
                                   Margin="15, 0, 0, 10"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis" />

                        <!-- Url -->
                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="Url:" />

                        <TextBlock Grid.Row="3"
                                   Grid.Column="1"
                                   Text="{Binding DownloadFile.Url}"
                                   ToolTip.Tip="{Binding DownloadFile.Url}"
                                   Margin="15, 0, 0, 0"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                </Border>

                <!-- Don't show again -->
                <Border CornerRadius="{DynamicResource DefaultCornerRadius}"
                        Padding="15"
                        Background="{DynamicResource SecondaryBackgroundColor}">
                    <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Grid.Column="0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   Text="Donâ€™t show this dialog again"
                                   FontWeight="Bold" />

                        <cc:CustomToggleSwitch Grid.Column="1"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               IsChecked="{Binding DontShowThisDialogAgain}" />
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action buttons -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*, Auto"
              Margin="0, 20, 0, 0">
            <!-- Open file and folder buttons -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                <Button Classes="button success"
                        Command="{Binding OpenFileCommand}"
                        CommandParameter="{Binding $parent[Window]}"
                        Content="Open file" />

                <Button Classes="button info"
                        Command="{Binding OpenFolderCommand}"
                        CommandParameter="{Binding $parent[Window]}"
                        Content="Open folder" />
            </StackPanel>

            <!-- Close button -->
            <Button Grid.Column="1"
                    Classes="button danger"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding $parent[Window]}"
                    Content="Close"
                    VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>